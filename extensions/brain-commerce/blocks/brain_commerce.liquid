{% comment %}
  Brain Commerce Bar Block
  Loads the Brain Commerce script using the store_id metafield from the shop.
{% endcomment %}

{% assign store_id = shop.metafields.brain_commerce.store_id %}

{% if store_id %}
  {% comment %} <iframe
    id="BrainCommerceChat"
    title="BrainCommerce.io Chat"
    style="width: 100%; height: 300px; border: none; display: block; margin: 0 auto;"
    allowtransparency="true"
    scrolling="yes"
  ></iframe>
  <script
    async
    src="https://firebasestorage.googleapis.com/v0/b/braincommerce-prod.appspot.com/o/bc_bar_prod.js?alt=media&token=0bec0839-0454-4b4c-9ad9-0950f935f0bc"
    storeid="{{ store_id }}"
    iframeid="BrainCommerceChat">
  </script> {% endcomment %}


  <!-- BrainCommerce.io HTML part -->
  <script
  async
  src="https://firebasestorage.googleapis.com/v0/b/braincommerce-prod.appspot.com/o/bc_bar_prod.js?alt=media&token=0bec0839-0454-4b4c-9ad9-0950f935f0bc"
  storeid="{{ store_id }}"></script>
{% else %}
  <!-- Brain Commerce: store_id metafield not set -->
{% endif %}

{% schema %}
{
  "name": "Brain Commerce Bar",
  "target": "section",
  "settings": []
}
{% endschema %}